#!/usr/bin/env python

import sys

from dot_tools.misc_tools import DotException
from dot_tools.git_tools import is_git, find_implementation_file

def main():

    if not is_git():
        raise DotException("Can't do this in a non git directory")

    if len(sys.argv) != 2:
        raise DotException("Only one positional argument is expected")

    print(find_implementation_file(sys.argv[1]))

if __name__ == '__main__':
    main()
